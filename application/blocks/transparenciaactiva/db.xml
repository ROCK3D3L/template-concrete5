<?xml version="1.0"?>
<schema version="0.3">
	<table name="btTransparenciaActiva">
		<field name="bID" type="I">
			<key />
			<unsigned />
		</field>
        <field name="titulo" type="C" size="200"></field>
        <field name="mes" type="I"></field>
        <field name="resumen" type="X"></field>
        <field name="autor" type="C" size="100"></field>
	</table>
	
	<table name="btTransparenciaActivaEntries">
		<field name="id" type="I">
			<key />
			<unsigned />
			<autoincrement />
		</field>
		<field name="bID" type="I"><unsigned /></field>
		<field name="orden" type="I">
			<notnull />
			</field>
		<field name="fID" type="I">
			<unsigned />
            <default value="0" />
		</field>
        <field name="texto_link" type="C"></field>
	</table>
</schema>
